<dx:ThemedWindow xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars" 
    x:Class="TestWVVM.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="SettingsWindow" Height="800" Width="1000"
    >

    <Grid>
<dxb:BarManager  >
            <dxb:BarManager.Bars>
                <dxb:Bar IsMainMenu="True" Caption="По умолчанию">
                    <dxb:Bar.DockInfo>
                        <dxb:BarDockInfo ContainerType="Top"/>
                    </dxb:Bar.DockInfo>
                    <dxb:BarButtonItem Content="Сохранить" Glyph="/TestWVVM;component/Images/icons8_save_16px_1.png" />
                    <dxb:BarButtonItem Content="По умолчанию" Glyph="/TestWVVM;component/Images/icons8_undelete_16px.png" />

                </dxb:Bar>
                <dxb:Bar IsStatusBar="True">
                    <dxb:Bar.DockInfo>
                        <dxb:BarDockInfo ContainerType="Bottom"/>
                    </dxb:Bar.DockInfo>
                </dxb:Bar>
            </dxb:BarManager.Bars>
        </dxb:BarManager>
    </Grid>
</dx:ThemedWindow>
